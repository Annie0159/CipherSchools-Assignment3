#include<iostream>


using namespace std;

int main()
{
    int n,i,s1=0,s2=0;
    cin>>n;
    int a[n];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    for(i=0;i<n;i++)
    {
        if(i%2==0)
        {
            s1=s1+a[i];
        }
        else
        {
            s2=s2+a[i];
        }
    }
    if(s1>s2)
    {
        cout<<s1;
    }
    else
    {
        cout<<s2;
    }
    return 0;
}
